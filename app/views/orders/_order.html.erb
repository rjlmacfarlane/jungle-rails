<div>
  <h2>Order Details</h2>
  <hr>
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="3">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |item| %>
          <tr>
            <td><%= image_tag item.product.image.tiny %></td>
            <td><%= item.product.name %></td>
            <td><%= item.product.description %></td>
            <td><%= number_to_currency(item.item_price) %></td>
            <td><%= item.quantity %></td>
            <td><%= number_to_currency(item.item_price * item.quantity) %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="5">
            Total:
          </th>
          <th>
           <%= number_to_currency(@order.total_cents/100.00) %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
</div>