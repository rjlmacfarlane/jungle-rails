<section>

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to 'Add New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="col-sm-12">Category</th>
          <th class="col-sm-1"></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to fa_icon('link'), [:category, :id => category.id], class: 'btn btn-sm btn-info' %></td>
          </tr>
        <% end %>
      </tbody>
    </table> 

  </div>

</section>